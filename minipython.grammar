Package minipython;

Helpers
	digit = ['0' .. '9'];
	letter = ['a' .. 'z']|['A' .. 'Z']; 
	cr = 13; 
	lf = 10;
	all = [0..127]; 
	eol = lf | cr | cr lf ;
	not_eol = [all - [cr + lf]] ; 

Tokens
	def = 'def';
	l_par = '(';
	r_par = ')';
	semi = ':';
	assign = '=';
	comma=',';
	tab = 9;
	if = 'if';
	while = 'while';
	for = 'for';
	in = 'in';
	return = 'return';
	print = 'print';
	assign_minus = '-=';
	assign_div = '/=';
	l_br = '[';
	r_br = ']';
	assert = 'assert';
	plus = '+';
	minus = '-';
	mult = '*';
	multmult = '**';
	div = '/';
	mod = '%';
	open = 'open';
	type = 'type';
	max = 'max';
	min = 'min';
	and = 'and';
	or = 'or';
	not = 'not';
	less = '<';
	great = '>';
	geq = '>=';
	leq = '<=';
	eq = '==';
	neq = '!=';
	true = 'true';
	false = 'false';
	dot = '.';
	none = 'None';
	line_comment = '#' not_eol* eol; 
	number = digit+ | (digit+ '.' digit+);
	id = letter (letter | digit)*;
	string = ('"' | ''')not_eol* ('"' | ''');
	blank = (' ' | lf | cr);
	
Ignored Tokens
	blank, line_comment;

Productions
	goal = commands*;
	
	commands = {fun} function | 
	           {stat} statement;
			   
	
	function = def id l_par argument? r_par semi statement;
	argument = id c1? c*;
	c = comma id c1? ;
	c1 = assign value;
	
	statement = {if} tab* if comparison semi statement |
			    {while} tab* while comparison semi statement |
				{for} tab* for [forid]:id in [inid]:id semi statement |
				{return} tab* return expression |
				{print} tab* print expression c2* |
				{assign} tab* id assign expression |
				{assignmin} tab* id assign_minus expression |
				{assigndiv} tab* id assign_div expression |
				{list} tab* id l_br [lbr]:expression r_br assign [rbr]:expression |
				{assert} tab* assert expression c2? |
				{func} tab* function_call;


	expression = {expr} expr|
				 {plus} expression plus expr|
				 {minus} expression minus expr|
				 {mult} expression mult expr|
				 {div} expression div expr|
				 {mod} expression mod expr|
				 {multmult} expression multmult expr;
	expr = {listexp} id l_br expr r_br|
		   {func_call} function_call|
		   {value} value|
		   {id} id| 
		   {open} open l_par [lpar]:expr comma [rpar]:expr r_par|
		   {type} type l_par id r_par|
		   {max} max l_par value c5+ r_par|
		   {min} min l_par value c5+ r_par|
		   {par} l_par expr r_par|
		   {list_con} l_br expr c2* r_br;
	c5 = comma value;
	
	
	comparison = {comp} comp |
				 {and} comparison and comp| 
				 {or} comparison or comp;
	comp = {true} true|
		   {false} false|
		   {less} [lpar]:expression less [rpar]:expression|
		   {great} [lpar]:expression great [rpar]:expression|
		   {geq} [lpar]:expression geq [rpar]:expression|
		   {leq} [lpar]:expression leq [rpar]:expression|
		   {neq} [lpar]:expression neq [rpar]:expression|
		   {eq} [lpar]:expression eq [rpar]:expression|
		   {not} not comp;
				 
			
	function_call = id l_par arglist? r_par;
	
	arglist = expression c2*;
	c2 = comma expression;
	
	value = {method} id dot function_call |
		    {num} number | 
			{string} string |
			{none} none;
	
	num = number;
	
	ident = id;
	
